# include <avr/io.h>
# include <gpio.h>
# include "pwm_timer0.h"

void PWM_Timer0_Start(uint8 duty_cycle)
{
 /*Initializes Timer0 in PWM mode and sets the required duty cycle.*/
/* Prescaler: F_CPU/1024--> CS00 = 1, CS01= , CS00 = 1,
	SET_BIT(TCCR0,CS00);
	SET_BIT(TCCR0,CS00);
/*Non-inverting mode*/
		TCCR0 = (1 << WGM00) | (1 << WGM01) | (1 << COM01) | (1 << CS02) | (1 << CS00);
 /*The function configures OC0 as the output pin. */
	GPIO_setupPinDirection(PORTD_ID,PIN3_ID , PIN_OUTPUT);
/*Parameters:
duty_cycle: Percentage (0 to 100%) representing the PWM duty cycle.*/
}
